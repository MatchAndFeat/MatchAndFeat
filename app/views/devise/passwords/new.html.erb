<div class="d-flex flex-column justify-content-center align-items-center text-center col-12">
    <i class="fas fa-user-lock" style="font-size:60px"></i>
    <br>
      <h1 class="h1 mb-3 font-weight-normal text-center">Mot de passe oublié ?</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field m-2">
      <%= f.label :"Votre_email_d'_inscription", class:"mb-2" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions m-2">
      <%= f.submit "Réinitialiser votre mot de passe", class:"btn btn-outline-danger" %>
    </div>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
