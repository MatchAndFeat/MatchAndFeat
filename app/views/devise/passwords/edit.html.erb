<div class="card align-self-center text-center border-secondary mx-auto">
  <div class="card-body bg-dark text-warning">  
    <h1 class="h1 mb-3 font-weight-normal text-center">Modification du mot de passe</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field m-2">
      <%= f.label :Mot_de_passe, "Nouveau mot de passe" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caract√®res minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
    </div>

    <div class="field m-2">
      <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Changer de mot de passe" %>
    </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

