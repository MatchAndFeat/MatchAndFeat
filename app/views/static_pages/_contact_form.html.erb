<div class="col-md-6" id="flash-message">
  <%= render 'flash' %>
</div>

<%= form_for @contact, url: about_path, remote: true do |f| %>
<section class="mb-4">
  <h2 class="h1-responsive font-weight-bold text-center my-4 ">Nous contacter</h2>
  <p class="text-center w-responsive mx-auto mb-5"> Remplie le formulaire ci-dessous pour nous envoyer un message et nous te répondrons dans les plus brefs délais !</p>
  <div class="row">
    <div class="col-md-9 col-sm-12 mb-md-0 mb-5">
      <div class="row m-2">
        <div class="col-md-4">
          <div class="md-form mb-0">
            <%= f.label :Pseudo %><br /><br />
            <%= f.text_field  :name, required: true, class: "contact-form-text-area" %><br />
          </div>
        </div>

        <div class="col-md-4">
          <div class="md-form mb-0">
            <%= f.label :Email %><br /><br />
            <%= f.text_field :email, required: true, class: "contact-form-text-area" %><br />
          </div>
        </div>
      </div>
      <div class="row m-2">
        <div class="col-md-12">
          <div class="md-form">
            <%= f.label :Message %><br />
            <%= f.text_area :message, rows: 3, required: true, class: "contact-form-text-area" %><br /><br />
          </div>
        </div>
      </div>
      <%= f.submit 'Envoyer à Match & Feat', class: 'btn btn-outline-warning mx-3' %>
    </div>

    <div class="col-md-3 col-sm-12 text-center">
      <ul class="list-unstyled mb-0">
        <li><i class="fas fa-map-marker-alt fa-2x"></i>
          <p> Marseille 13000, FRA - EU</p>
        </li>
        <li><i class="fas fa-phone mt-4 fa-2x"></i>
          <p> 06 66 83 49 40</p>
        </li>
        <li><i class="fas fa-envelope mt-4 fa-2x"></i>
          <p> matchandfeathp@gmail.com</p>
        </li>
      </ul>
    </div>
  </div>
</section>
<% end %>
