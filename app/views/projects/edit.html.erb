<% if @project.errors.any? %>
<%= render "shared/error_messages", object: @project %>
<% end %>

<div class="d-flex flex-column justify-content-center align-items-center text-center">
  <div class="col-lg-6">
    <h1>Modifie ton projet</h1>
    <%= render 'form', project: @project %>

    <h3>Fichiers liés à ce projet</h3>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 m-3">
      <% @project.attachements.each do |attachement| %>
      <% unless attachement.id == nil %>
      <div class="d-flex flex-column align-item-center">

          <div class="card bg-primary text-center">
            <%= image_tag attachement, class:"mt-2"%>
            <%= attachement.filename %>
            <%= link_to "Supprimer", attachement_path(attachement), data: { method: :delete, confirm: "Êtes vous sûr de vouloir supprimer ce fichier ?" }, class: "btn btn-danger my-2" %>
          </div>
      </div>

      <% end %>
      <% end %>
    </div>
  </div>
</div>
