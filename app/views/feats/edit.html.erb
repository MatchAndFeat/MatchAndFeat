<% if @feat.errors.any? %>
<%= render "shared/error_messages", object: @feat %>
<% end %>

<div class="d-flex flex-column justify-content-center align-items-center text-center col-12">  
  <h1>Modifie ton feat</h1>
  <%= render 'form', feat: @feat, project: @feat.project %>

  <h3>Fichiers liés à ton feat</h3>

  <div class="d-flex flex-wrap justify-content-around align-item-center">
    <% @feat.attachements.each do |attachement| %>
    <% unless attachement.id == nil %>
    <div class="d-flex flex-column align-item-center">
      <%= image_tag attachement, class:"mt-2"%>
      <%= attachement.filename %>
      <%= link_to "Supprimer", attachement_path(attachement), data: { method: :delete, confirm: "Êtes vous sûr de vouloir supprimer ce fichier ?" }, class: "btn btn-danger my-2" %>
    </div>
    <% end %>
    <% end %>
  </div>  
</div>